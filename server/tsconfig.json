{
    "compilerOptions": {
        "outDir": "./dest",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./src/typings"
        ],
        "sourceMap": false,
        //"noImplicitAny": false,
        //"strict": false,
        "module": "commonjs",
        "target": "es2018",
        "lib": [
            "es2017",
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node"
    }
}