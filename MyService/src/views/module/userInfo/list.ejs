<div class="container">
    <div id="queryBox" class="form-group">
        <% var rowItemClass = 'col-lg-3 col-md-3 col-sm-6 col-xs-12'; %>
        <div class="row my-row">
            <%
            var searchItemList = [{
                text: '账号',
                name: 'account',
            }, {
                text: '昵称',
                name: 'nickname',
            }, {
                text: '角色',
                name: 'role',
            }, {
                text: '权限',
                name: 'authority',
            }, {
                text: '创建时间起始',
                name: 'createDateStart',
            }, {
                text: '创建时间结束',
                name: 'createDateEnd',
            }, {
                text: '修改时间起始',
                name: 'editDateStart',
            }, {
                text: '修改时间结束',
                name: 'editDateEnd',
            }, {
                text: 'id',
                name: 'id',
            },];
            for(var i = 0;i < searchItemList.length;i++){
                var item = searchItemList[i];
            %>
            <div class="<%= rowItemClass %>">
                <div class="input-group">
                    <span class="input-group-addon"><%= item.text %></span>
                    <input name="<%= item.name %>" type="text" class="form-control"/>
                </div>
            </div>
            <% } %>
        </div>
        <div class="row my-row">
            <div class="<%= rowItemClass %> col-lg-offset-9 col-md-offset-9 col-sm-offset-6">
                <button id="query" class="btn btn-default btn-block">
                    search
                </button>
            </div>
        </div>
    </div>
    <table id="list" class="table table-bordered">
        <thead>
        <tr>
            <th class="text-center" colspan="100">userInfo</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th>用户</th>
            <th class="col-xs-2">角色</th>
            <th class="col-xs-4">权限</th>
            <th>创建时间</th>
            <th>操作时间</th>
            <th>备注</th>
            <th>操作</th>
        </tr>
        </tbody>
        <tbody class="error">
        <tr>
            <td class="text-center" colspan="100" name="errorContent"></td>
        </tr>
        </tbody>
    </table>
    <div id="pager"></div>
</div>

<div id="detail" data-backdrop="false" role="dialog" tabindex="-1" class="modal fade pop-up-box">
    <% include ../../_template/detailModal %>
</div>
<script type="text/template" id="queryItemTemp">
    <% include ../../_template_front/userInfo/listItem %>
</script>

<script type="text/template" id="detailTemp">
    <% include ../../_template_front/userInfo/detail %>
</script>

<script type="text/template" id="authorityLabelTemp">
    <% include ../../_template_front/authorityLabel %>
</script>
<script type="text/template" id="roleLabelTemp">
    <% include ../../_template_front/roleLabel %>
</script>
<script type="text/javascript">
	require(['./_main', './moduleUserInfo'], function () {
		var main = require('./_main'),
			moduleUserInfo = require('./moduleUserInfo');
		main.init();
		new moduleUserInfo.ModuleUserInfo();
	});
</script>