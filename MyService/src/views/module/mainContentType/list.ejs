<div class="container">
    <% var rowItemClass = 'col-lg-3 col-md-3 col-sm-6 col-xs-12'; %>
    <div id="queryBox" class="form-group">
        <div class="row my-row">
            <%
            var searchItemList = [{
                text: 'id',
                name: 'id',
            }, {
                text: 'type',
                name: 'type',
            }, {
                text: 'typeName',
                name: 'typeName',
            }, {
                text: 'parentType',
                name: 'parentType',
            }, {
                text: 'level',
                name: 'level',
            },];
            for(var i = 0;i < searchItemList.length;i++){
                var item = searchItemList[i];
            %>
            <div class="<%= rowItemClass %>">
                <div class="input-group">
                    <span class="input-group-addon"><%= item.text %></span>
                    <input name="<%=  item.name %>" type="text" class="form-control"/>
                </div>
            </div>
            <% } %>
        </div>
        <div class="row my-row">
            <div class="<%= rowItemClass %> col-md-offset-6">
                <button id="query" class="btn btn-default btn-block">
                    search
                </button>
            </div>
            <div class="<%= rowItemClass %>">
                <button class="btn btn-default btn-block add">
                    add
                </button>
            </div>
        </div>
    </div>
    <table id="list" class="table table-bordered">
        <thead>
        <tr>
            <th class="text-center" colspan="100">mainContentType</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th>id</th>
            <th>type</th>
            <th>typeName</th>
            <th>parentType</th>
            <th>level</th>
            <th>操作</th>
        </tr>
        </tbody>
        <tbody class="error">
        <tr>
            <td class="text-center" colspan="100" name="errorContent"></td>
        </tr>
        </tbody>
    </table>
    <div class="row my-row">
        <div class="<%= rowItemClass %>">
            <button id="tree" class="btn btn-default btn-block">
                tree
            </button>
        </div>
    </div>
    <div id="pager"></div>
</div>


<div id="treeModal" data-backdrop="true" role="dialog" tabindex="-1" class="modal fade pop-up-box">
    <% include ../../_template/mainContentType/treeModal.ejs %>
</div>
<div id="detail" data-backdrop="false" role="dialog" tabindex="-1" class="modal fade pop-up-box">
    <% include ../../_template/detailModal %>
</div>
<script type="text/template" id="detailTemp">
    <% include ../../_template_front/mainContentType/detail %>
</script>
<script type="text/template" id="queryItemTemp">
    <% include ../../_template_front/mainContentType/listItem %>
</script>

<script type="text/template" id="treeItem">
    <% include ../../_template_front/mainContentType/treeItem %>
</script>
<script type="text/javascript">
	require(['./_main', './moduleMainContentType'], function () {
		var main = require('./_main'),
			moduleMainContentType = require('./moduleMainContentType');
		main.init();
		new moduleMainContentType.ModuleMainContentType();
	});
</script>