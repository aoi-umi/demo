<div class="container" style="padding-top: 20px">
    <form class="form-horizontal">
        <% var list = [{
            content: '用户名',
            attr: 'id="account" placeholder="用户名必须以英文字母开头（可包含数字下划线）组成的6位或以上的字符串"'
        }, {
            content: '昵称',
            attr: 'id="nickname" placeholder="请输入昵称"'
        }, {
            content: '密码',
            attr: 'id="password" placeholder="请输入密码（6位或以上的字符串）" type="password"'
        }, {
            content: '再次输入密码',
            attr: 'id="passwordRepeat" placeholder="请输入密码" type="password"'
        },];
        list.forEach(function (item) {
        %>
        <div class="form-group">
            <label class="col-sm-2 control-label"><%= item.content %></label>

            <div class="col-sm-8">
                <input class="form-control" <%- item.attr %> value="">
            </div>
        </div>
        <% }); %>
        <div class="form-group">
            <div class="col-sm-8 col-sm-push-2">
                <button id="signUp" type="button" class="btn btn-default btn-block">注册</button>
            </div>
        </div>
    </form>
</div>
<script type="text/javascript">
    require(['./_main'], function () {
        require('./_main').init();                
    });
</script>