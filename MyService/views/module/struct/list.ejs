<div class="container">
    <% var rowItemClass = 'col-lg-3 col-md-3 col-sm-6 col-xs-12'; %>
    <div class="form-group">
        <div class="row my-row">
            <%
            var prefix = '';
            var searchItemList = [{
                text: 'id',
                id: 'id',
            }, {
                text: 'type',
                id: 'type',
            }, {
                text: 'struct',
                id: 'struct',
            }, {
                text: 'structName',
                id: 'structName',
            }, {
                text: 'parentStruct',
                id: 'parentStruct',
            }, {
                text: 'level',
                id: 'level',
            },];
            for(var i = 0;i < searchItemList.length;i++){
                var item = searchItemList[i];
            %>
            <div class="<%= rowItemClass %>">
                <div class="input-group">
                    <span class="input-group-addon"><%= item.text %></span>
                    <input id="<%= prefix + item.id %>" type="text" class="form-control"/>
                </div>
            </div>
            <% } %>
        </div>
        <div class="row my-row">
            <div class="<%= rowItemClass %> col-md-offset-6">
                <button id="search" class="btn btn-default btn-block">
                    search
                </button>
            </div>
            <div class="<%= rowItemClass %>">
                <button class="btn btn-default btn-block add">
                    add
                </button>
            </div>
        </div>
    </div>
    <table id="list" class="table table-bordered">
        <thead>
        <tr>
            <th class="text-center" colspan="100">struct</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th>id</th>
            <th>type</th>
            <th>struct</th>
            <th>structName</th>
            <th>parentStruct</th>
            <th>level</th>
            <th>操作</th>
        </tr>
        </tbody>
        <tbody class="error">
        <tr>
            <td class="text-center" colspan="100" name="errorContent"></td>
        </tr>
        </tbody>
    </table>
    <div class="row my-row">
        <div class="<%= rowItemClass %>">
            <button id="tree" class="btn btn-default btn-block">
                tree
            </button>
        </div>
    </div>
    <div id="pager"></div>
</div>


<div id="treeModal" data-backdrop="true" role="dialog" tabindex="-1" class="modal fade pop-up-box">
    <% include ../../_template/struct/treeModal.ejs %>
</div>
<div id="detail" data-backdrop="false" role="dialog" tabindex="-1" class="modal fade pop-up-box">
    <% include ../../_template/detailModal %>
</div>
<script type="text/template" id="structSaveTemp">
    <% include ../../_template_front/struct/detail %>
</script>
<script type="text/template" id="structItem">
    <% include ../../_template_front/struct/listItem %>
</script>

<script type="text/template" id="structTreeItem">
    <% include ../../_template_front/struct/treeItem %>
</script>
<script type="text/javascript">
	require(['./_main', './moduleStruct'], function () {
		var main = require('./_main'),
			moduleStruct = require('./moduleStruct');
		main.init();
		new moduleStruct.ModuleStruct();
	});
</script>