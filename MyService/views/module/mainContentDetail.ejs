<style>
    tbody>tr:first-child .moveUp{
        display: none;
    }
    tbody>tr:last-child .moveDown{
        display: none;
    }
</style>
<div class="container">
    <% var rowItemClass = 'col-xs-12 col-md-6';%>
    <%var main_content = mainContentDetail.main_content;%>
    <div class="hidden">
        <input id="id" value="<%=main_content.id%>"/>
    </div>
    <%if(false){%>
    <pre>
<%=JSON.stringify(mainContentDetail, null, '\t')%>
    </pre>
    <%}%>
    <div class="form-group">
        <div>
            <p>
                <span>创建人:</span><span><%=main_content.nickname || ''%></span>
            </p>
            <span>状态:</span><span><%=main_content.status_name || ''%></span>
            <span>创建时间:</span><span><%=main_content.create_date || ''%></span>
            <span>修改时间:</span><span><%=main_content.operate_date || ''%></span>
            <span>修改人:</span><span><%=main_content.operator || ''%></span>
            <p>
            <%
            var main_content_type_list = mainContentDetail.main_content_type_list;
            main_content_type_list.forEach(function(item, index){%>
            <a href="javascript:;"><%=item.type_name%></a>
                <%if(index < main_content_type_list.length - 1){%>
                >>
                <%}%>
            <%})%>
            </p>
        </div>
        <div class="row my-row">
            <div class="<%=rowItemClass%>">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">标题</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="title" placeholder="" value="<%=main_content.title || ''%>"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">描述</label>
                        <div class="col-sm-10">
                            <textarea class="form-control no-resize" id="description" placeholder=""><%=main_content.description || ''%></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <div class="my-row">
                <button id="showMainContentChild" class="btn btn-default">新增</button>
            </div>
            <table class="table table-bordered">
                <thead>
                <tr><th>顺序</th><th>类型</th><th>内容</th><th>操作</th></tr>
                </thead>
                <tbody id="mainContentChildList">
                    <%mainContentDetail.main_content_child_list.forEach(function(item){
                        item.stringify = JSON.stringify(item);
                        with(item){
                    %>
                        <%include ../_template/mainContentChildItem%>
                    <%}
                    })%>
                </tbody>
            </table>
        </div>

        <div class="my-row text-center">
            <%
            var operateList = [];
            switch (main_content.status){
                case 0:
                    operateList.push({
                        text:'保存',
                        operate:'save',
                        className:'save'
                    });
                    operateList.push({
                        text:'提交',
                        operate:'submit',
                        className:'save'
                    });
                    break;
                case 1:
                    operateList.push({
                        text:'审核通过',
                        operate:'pass',
                        className:'statusUpdate'
                    });
                    operateList.push({
                        text:'审核不通过',
                        operate:'not-pass',
                        className:'statusUpdate'
                    });
                    break;
            }
            operateList.forEach(function(item){ %>
            <button class="btn btn-default <%=item.className%>" data-operate="<%=item.operate%>"><%=item.text%></button>
            <%});%>
        </div>
        <div>
            <table class="table table-bordered">
                <thead>
                    <tr><th>类型</th><th>内容</th><th>操作人</th><th>创建时间</th></tr>
                </thead>
                <%mainContentDetail.main_content_log_list.forEach(function(item){%>
                <tr>
                    <td><%=item.type%></td>
                    <td><%=item.content%></td>
                    <td><%=item.operator%></td>
                    <td><%=item.create_date%></td>
                </tr>
                <%})%>
            </table>
        </div>
    </div>
</div>
<div id="mainContentChild" data-backdrop="false" role="dialog" tabindex="-1" class="modal fade" style="z-index: 1040">
    <div class="modal-dialog" style="top:100px">
        <div class="modal-content">
            <div class="modal-body">
                <button class="close" type="button" data-dismiss="modal">
                    ×
                </button>
                <h4 name="title" class="modal-title">
                </h4>
            </div>
            <div id="mainContentChildDetail" class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">type</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="type"><option value="0">0</option></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">content</label>
                        <div class="col-sm-10">
                            <textarea class="form-control no-resize" name="content"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div name="footer" class="modal-body">
                <button name="accept" name="btnContent" type="button" class="btn btn-default" id="addMainContentChild">确认</button>
                <button name="cancel" name="btnContent" type="button" class="btn btn-default" data-dismiss="modal">取消</button>
            </div>
        </div>
    </div>
</div>
<script type="text/template" id="mainContentChildItem">
    <%include ../_template_web/mainContentChildItem%>
</script>
<script type="text/javascript" src="/js/<%=env%>/my.pager.js?v=<%=version%>"></script>
<script type="text/javascript" src="/js/<%=env%>/module.js?v=<%=version%>"></script>
<script type="text/javascript" src="/js/<%=env%>/moduleMainContent.js?v=<%=version%>"></script>
<script type="text/javascript">
    var mainContentDetail;
    $(function () {
        var opt = {
            operation:['detailQuery', 'save']
        };
        mainContentDetail = moduleMainContent.init(opt);
    });
</script>