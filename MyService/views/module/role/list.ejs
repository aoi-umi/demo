<div class="container">
    <div id="queryBox" class="form-group">
        <% var rowItemClass = 'col-lg-3 col-md-3 col-sm-6 col-xs-12'; %>
        <div class="row my-row">
            <%
            var prefix = '';
            var searchItemList = [{
                text: 'id',
                id: 'id',
            }, {
                text: 'code',
                id: 'code',
            }, {
                text: 'name',
                id: 'name',
            }, {
                text: 'anyKey',
                id: 'anyKey',
            },];
            for(var i = 0;i < searchItemList.length;i++){
                var item = searchItemList[i];
            %>
            <div class="<%= rowItemClass %>">
                <div class="input-group">
                    <span class="input-group-addon"><%= item.text %></span>
                    <input id="<%= prefix + item.id %>" type="text" class="form-control"/>
                </div>
            </div>
            <% } %>
        </div>
        <div class="row my-row">
            <label class="control-label">状态</label>
            <label class="control-label">
                <input type="radio" name="status" value="" checked/>全部
            </label>
            <label class="control-label">
                <input type="radio" name="status" value="1"/>启用
            </label>
            <label class="control-label">
                <input type="radio" name="status" value="0"/>禁用
            </label>
        </div>
        <div class="row my-row">
            <div class="<%= rowItemClass %> col-lg-offset-6 col-md-offset-6">
                <button id="query" class="btn btn-default btn-block">
                    search
                </button>
            </div>
            <div class="<%= rowItemClass %>">
                <button class="btn btn-default btn-block add">
                    add
                </button>
            </div>
        </div>
    </div>
    <table id="list" class="table table-bordered">
        <thead>
        <tr>
            <th class="text-center" colspan="100">role</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th>id</th>
            <th>code</th>
            <th>name</th>
            <th class="col-xs-6">权限</th>
            <th>状态</th>
            <th>操作</th>
        </tr>
        </tbody>
        <tbody class="error">
        <tr>
            <td class="text-center" colspan="100" name="errorContent"></td>
        </tr>
        </tbody>
    </table>
    <div id="pager"></div>
</div>

<div id="detail" data-backdrop="false" role="dialog" tabindex="-1" class="modal fade pop-up-box">
    <% include ../../_template/detailModal %>
</div>
<script type="text/template" id="itemTemp">
    <% include ../../_template_front/role/listItem %>
</script>
<script type="text/template" id="detailTemp">
    <% include ../../_template_front/role/detail %>
</script>
<script type="text/template" id="authorityLabelTemp">
    <% include ../../_template_front/authorityLabel %>
</script>
<script type="text/javascript">
    require(['./_main', './moduleRole'], function () {
        var moduleRole = require('./moduleRole');
        require('./_main').init();        
        new moduleRole.ModuleRole();
    });
</script>