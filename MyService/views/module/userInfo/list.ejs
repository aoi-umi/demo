<div class="container">
    <div class="form-group">
        <% var rowItemClass = 'col-lg-3 col-md-3 col-sm-6 col-xs-12'; %>
        <div class="row my-row">
            <%
            var prefix = '';
            var searchItemList = [{
                text: '账号',
                id: 'account',
            }, {
                text: '昵称',
                id: 'nickname',
            }, {
                text: '角色',
                id: 'role',
            }, {
                text: '权限',
                id: 'authority',
            }, {
                text: '创建时间起始',
                id: 'create_datetime_start',
            }, {
                text: '创建时间结束',
                id: 'create_datetime_end',
            }, {
                text: '修改时间起始',
                id: 'edit_datetime_start',
            }, {
                text: '修改时间结束',
                id: 'edit_datetime_end',
            }, {
                text: 'id',
                id: 'id',
            },];
            for(var i = 0;i < searchItemList.length;i++){
                var item = searchItemList[i];
            %>
            <div class="<%= rowItemClass %>">
                <div class="input-group">
                    <span class="input-group-addon"><%= item.text %></span>
                    <input id="<%= prefix + item.id %>" type="text" class="form-control"/>
                </div>
            </div>
            <% } %>
        </div>
        <div class="row my-row">
            <div class="<%= rowItemClass %> col-lg-offset-9 col-md-offset-8 col-sm-offset-6">
                <button id="search" class="btn btn-default btn-block">
                    search
                </button>
            </div>
        </div>
    </div>
    <table id="list" class="table table-bordered">
        <thead>
        <tr>
            <th class="text-center" colspan="100">userInfo</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th>用户</th>
            <th class="col-xs-2">角色</th>
            <th class="col-xs-4">权限</th>
            <th>创建时间</th>
            <th>操作时间</th>
            <th>备注</th>
            <th>操作</th>
        </tr>
        </tbody>
        <tbody class="error">
        <tr>
            <td class="text-center" colspan="100" name="errorContent"></td>
        </tr>
        </tbody>
    </table>
    <div id="pager"></div>
</div>

<div id="userInfoSave" data-backdrop="false" role="dialog" tabindex="-1" class="modal fade pop-up-box">
    <div class="modal-dialog" >
        <div class="modal-content">
            <div class="modal-body">
                <button class="close" type="button" data-dismiss="modal">
                    ×
                </button>
                <h4 name="title" class="modal-title">
                </h4>
            </div>
            <div id="detailContainer" class="modal-body">
            </div>
            <div name="footer" class="modal-body">
                <button style="margin: 0 5px" type="button" class="btn btn-default btn-content admin-save">确认</button>
                <button style="margin: 0 5px" type="button" class="btn btn-default btn-content" data-dismiss="modal">
                    取消
                </button>
            </div>
        </div>
    </div>
</div>
<script type="text/template" id="itemTemp">
    <% include ../../_template_web/userInfo/listItem %>
</script>

<script type="text/template" id="detailTemp">
    <% include ../../_template_web/userInfo/detail %>
</script>

<script type="text/template" id="authorityLabelTemp">
    <% include ../../_template_web/authorityLabel %>
</script>
<script type="text/template" id="roleLabelTemp">
    <% include ../../_template_web/roleLabel %>
</script>
<script type="text/javascript" src="/js/<%= env %>/my.pager.js?v=<%= version %>"></script>
<script type="text/javascript" src="/js/<%= env %>/module.js?v=<%= version %>"></script>
<script type="text/javascript" src="/js/<%= env %>/moduleUserInfo.js?v=<%= version %>"></script>
<script type="text/javascript">
    $(function () {
        moduleUserInfo.init();
    });
</script>