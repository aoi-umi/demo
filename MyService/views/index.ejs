<script type="text/javascript">
    $(function(){
        $('.hover').on('mouseover mouseleave', function(e){
            var dom = $(this);
            if(dom.hasClass('hover-source')){
                $('.hover-target').css('left', dom.position().left);
            }
            switch (e.type) {
                case 'mouseover':
                    $('.hover-target').show();
                    break;
                case 'mouseleave':
                    $('.hover-target').hide();
                    break;
            }
        });
    })
</script>
