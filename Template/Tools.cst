#region js

public static List<string> CreateJs(DatabaseModel databaseModel, DatabaseTypeEnum databaseType)
{
    var list = new List<string>();
    switch(databaseType)
    {
        case DatabaseTypeEnum.MySql:
            list = CreateMySqlJs(databaseModel);
            break;
        
    }
    return list;
}

#region mysql js
public static List<string> CreateMySqlJs(DatabaseModel databaseModel)
{
    var list = new List<string>();
    var operateTypeList = new List<OperateTypeEnum>(){OperateTypeEnum.Save, OperateTypeEnum.Del, OperateTypeEnum.DetailQuery, OperateTypeEnum.Query};
    
    var procTableName = databaseModel.TableName;
    if(!string.IsNullOrEmpty(databaseModel.RemoveTablePrefix)){
        if(procTableName.StartsWith(databaseModel.RemoveTablePrefix))
            procTableName = procTableName.Substring(databaseModel.RemoveTablePrefix.Length);
    }
    
    var jsStrList = new List<string>();
    jsStrList.Add("var db = require('../_system/db');");
    jsStrList.Add("var exports = module.exports;");
    
    operateTypeList.ForEach(operateType=>{
        var level = 1;
        var tabStr = GetRepeatStr("\t", level);
        var functionName = "";
        var procName = "";
        var sqlStr = "var sql = 'call p_" + procTableName + "_{0}_auto({1})';";
        var paramsList = new List<string>();
        switch(operateType){
            case OperateTypeEnum.Save:
                procName = functionName = "save";
                paramsList.Add(databaseModel.IdCol.Name);
                paramsList.AddRange(databaseModel.Cols.Select(x=>x.Name));
                paramsList.Add("null_list");
                
                break;
            case OperateTypeEnum.Del:
                procName = functionName = "del";
                paramsList.Add(databaseModel.IdCol.Name);
                
                break;
            case OperateTypeEnum.DetailQuery:
                procName = "detail_query";
                functionName = "detailQuery";
                paramsList.Add(databaseModel.IdCol.Name);               
                break;
            case OperateTypeEnum.Query:
                procName = functionName = "query";
                paramsList.Add(databaseModel.IdCol.Name);
                paramsList.AddRange(databaseModel.Cols.Select(x=>x.Name));
                paramsList.Add("null_list");
                paramsList.Add("page_index");
                paramsList.Add("page_size");
                break;
        }      
        if(!string.IsNullOrEmpty(functionName))
        {
            sqlStr = string.Format(sqlStr, procName, string.Join(", ", paramsList.Select(x=> ":" + x)));                        
            jsStrList.Add("exports." + functionName + " = function (params, conn) {");
            jsStrList.Add(tabStr + sqlStr);
            jsStrList.Add(tabStr + "if(!conn)");
            jsStrList.Add(tabStr + "\t" + "return db.query(sql, params);");
            jsStrList.Add(tabStr + "else");
            jsStrList.Add(tabStr + "\t" + "return db.tranQuery(sql, params, conn);");
            jsStrList.Add("};" + Environment.NewLine);
        }
    });
    list.Add(string.Join(Environment.NewLine, jsStrList.ToArray()));
    return list;
}
